import { world } from "@minecraft/server";
import { ActionFormData } from "@minecraft/server-ui"; // Для NBT Editor UI

export const NBTEditor = {
    onUse(player, item) {
        if (!item) return;
        const form = new ActionFormData()
            .title("§uNBT Editor")
            .body("§7Редактируйте NBT предмета")
            .button("§aУрон: 32767")
            .button("§cУбрать NBT");
        
        form.show(player).then(response => {
            if (response.selection === 0) {
                // Добавление NBT-тега
                item.setLore(["§uNBT Power!"]);
                // world.sendMessage("Item NBT set to max damage.");
            }
        });
    },
    onTick(player, settings) { /* ... */ }
};

